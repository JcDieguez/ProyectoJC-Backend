<head>
    <title>Carga de producto</title>
</head>
<body>
    <h1>Información del Producto</h1>
    <form id="formularioProducto">
         <div>
            <label for="title">Titulo: </label>
            <input type="text" id="title" value="{{product.title}}" name="title">
        </div>
        <div>
            <label for="description">Descripción: </label>
            <input type="text" id="description" value="{{product.description}}" name="description">
        </div>
        <div>
            <label for="code">Código de Producto:  </label>
            <input type="text" id="code" value="{{product.code}}" name="code">
        </div>
        <div>
            <label for="price">Precio:  </label>
            <input type="number" id="price" value="{{product.price}}" name="price">
        </div>
        <div>
            <label for="category">Categoría:  </label>
            <input type="text" id="category" value="{{product.category}}" name="category">
        </div>
        <div>
            <label for="image">Imagen del Producto:  </label>
            <input type="file" id="image" value="{{product.image}}"  name="image">
        </div>
        <div>
            <input  type="hidden" id="fileAnterior" value="{{product.image}}" name="fileAnterior">
        </div>
          <div>
            <input  type="hidden" id="image" value="{{product._id}}" name="id">
        </div>
        <button type="submit">Guardar</button>
    </form>

    <script src="/js/cargaProductos.js"></script>
</body>
