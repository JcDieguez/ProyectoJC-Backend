<div>
    {{#if productos}}
    <h1>Hola {{name}}, éste es tu carrito actual</h1>
    {{#each productos}}
    <div>
        <p>{{this.title}}</p>
        <p>{{this.price}}</p>
    </div>
    {{/each}}
    <button id="purchaseButton">Finalizar Compra</button>
    <a href="/">Seguir comprando</a>
    {{else}}
    <h1>Aún no hay productos en tu carrito</h1>
    <a href="/">Comienza a agregar Productos</a>
    {{/if}}
</div>
<script src="/js/cart.js"></script>
