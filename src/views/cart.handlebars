<div style="text-align: center;">
  {{#if productos}}
  <h1 style="color: blue; font-size: 24px; margin-bottom: 20px;">Hola {{name}}, este es tu carrito actual</h1>
  {{#each productos}}
  <div style="border: 1px solid black; padding: 10px; margin-bottom: 20px;">
    <p style="font-weight: bold; margin-bottom: 5px; font-size: 18px;">{{this.title}}</p>
    <p style="color: rgb(1, 1, 31); margin-bottom: 10px; font-size: 16px;">Importe: ${{this.price}}</p>
    <img src={{this.image}} style="max-width: 100px; max-height: 150px; margin-bottom: 10px;">
   <button class="delete-button" data-product-id="{{this._id}}">Eliminar</button>
  </div>
  {{/each}}
  <button id="purchaseButton"
    style="background-color: green; color: white; padding: 5px 10px; border: none; margin-right: 10px;"
    onmouseover="this.style.backgroundColor='darkgreen'" onmouseout="this.style.backgroundColor='green'">
    Finalizar Compra</button>
  <a href="/" style="background-color: rgb(0, 0, 128); color: white; padding: 5px 10px; border: none; margin-left: 10px;">Seguir comprando</a>
  {{else}}
  <h1 style="color: red; font-size: 24px; margin-bottom: 20px;">AÃºn no hay productos en tu carrito</h1>
  <a href="/" style="color: blue; font-size: 18px;">Comienza a agregar productos</a>
  {{/if}}
</div>
<script src="/js/cart.js"></script>
