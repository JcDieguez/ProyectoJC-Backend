<div style="text-align: center;">
  {{#if productos}}
  <h1 style="color: blue;">Hola {{name}}, este es tu carrito actual</h1>
  {{#each productos}}
  <div style="border: 1px solid black; padding: 10px; margin-bottom: 10px;">
    <p style="font-weight: bold; margin-bottom: 5px;">Producto: {{this.title}}</p>
    <p style="color: blue; margin-bottom: 5px;">$ {{this.price}}</p>
    <button class="delete-button" data-product-id="{{this._id}}">Eliminar</button>
  </div>
  {{/each}}
  <button id="purchaseButton"
    style="background-color: green; color: white; padding: 5px 10px; border: none;"
    onmouseover="this.style.backgroundColor='darkgreen'" onmouseout="this.style.backgroundColor='green'">
    Finalizar Compra</button>
  <a href="/" style="background-color: rgb(0, 0, 128); color: white; padding: 5px 10px; border: none;" >Seguir comprando</a>
  {{else}}
  <h1 style="color: red;">AÃºn no hay productos en tu carrito</h1>
  <a href="/" style="color: blue;">Comienza a agregar productos</a>
  {{/if}}
</div>
<script src="/js/cart.js"></script>